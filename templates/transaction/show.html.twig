{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ transaction.code }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ transaction.montant }}</td>
            </tr>
            <tr>
                <th>Comenvoi</th>
                <td>{{ transaction.comenvoi }}</td>
            </tr>
            <tr>
                <th>Comretrait</th>
                <td>{{ transaction.comretrait }}</td>
            </tr>
            <tr>
                <th>Cometat</th>
                <td>{{ transaction.cometat }}</td>
            </tr>
            <tr>
                <th>Comsys</th>
                <td>{{ transaction.comsys }}</td>
            </tr>
            <tr>
                <th>Frais</th>
                <td>{{ transaction.frais }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ transaction.type }}</td>
            </tr>
            <tr>
                <th>Dateenvoi</th>
                <td>{{ transaction.dateenvoi ? transaction.dateenvoi|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transaction_index') }}">back to list</a>

    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
